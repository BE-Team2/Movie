<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.movie.mapper.MapTestMapper">
    <select id="selectTheaterData" resultType="com.example.movie.map.dto.MapDTO" parameterType="Long">
        SELECT
            latitude
            ,longitude
            ,theaterDetail
        FROM
            maptest
        WHERE
            theater_id = #{theater_id}
    </select>

</mapper>