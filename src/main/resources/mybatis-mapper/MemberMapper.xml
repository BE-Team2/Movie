<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.movie.mapper.MemberMapper">
    <select id="selectLogin" parameterType="com.example.movie.dto.MemberDTO" resultType="com.example.movie.dto.MemberDTO">
        SELECT
            userId,
            password,
            id
        FROM
            member
        WHERE
            userId = #{userId}
        AND
            password = #{password}

    </select>

    <select id="selectMemberDetail" parameterType="com.example.movie.dto.MemberDTO" resultType="com.example.movie.dto.MemberDTO">
        SELECT
            id
            ,name
            ,userId
            ,password
            ,email
            ,phone
            ,indate
        FROM
            member
        WHERE
            userId = #{userId}
    </select>

    <update id="updateMemberName" parameterType="com.example.movie.dto.MemberDTO">
        UPDATE
            member
        SET
            name = #{name}
        WHERE
            userId = #{userId}
    </update>

    <update id="updateMemberPassword" parameterType="com.example.movie.dto.MemberDTO">
        UPDATE
            member
        SET
            password = #{password}
        WHERE
            userId = #{userId}
    </update>
</mapper>